	@echo
	@echo '  This Makefile is designed to be invoked via the Linux 2.6'
	@echo '  build system.  You should use the O= and M= Linux make' 
	@echo '  parameters.  For example, if your Linux build tree is in' 
	@echo '  <BUILD_DIR>, and this perfmon directory is'
	@echo '  in <SRC_DIR>/perfmon, then change into the Linux 2.6' 
	@echo '  source tree and execute:' 
	@echo
	@echo '    make O=<BUILD_DIR> M=<SRC_DIR>/perfmon'
	@echo

