######################################################################
#  The Linux template
######################################################################
build_dir=$(cfg_build_dir)/$(unpack_linux-2.6)

define linux-2.6-template
# Parameter $1: Linux configuration name
# Parameter $2: cpu

.PHONY: install-linux-2.6-$1 clean-linux-2.6-$1-$2 reconfig-linux-2.6-$1-$2
install-linux-2.6:: install-linux-2.6-$1-$2
clean-linux-2.6:: clean-linux-2.6-$1-$2
uninstall-linux-2.6:: uninstall-linux-2.6-$1-$2

reconfig-linux-2.6-$1-$2: $(build_dir)-$1-$2/.config
	$(Q) (cd $(cfg_src_dir)/$(unpack_linux-2.6) && make $(S) O=$(build_dir)-$1-$2 $(linux-2.6-opts) menuconfig)

.PHONY: $(cfg_boot_dir)/$2/vmlinuz-$(version_linux-2.6)-$1 \
	$(cfg_boot_dir)/$2/bzImage-$(version_linux-2.6)-$1 \
	$(cfg_boot_dir)/$2/guestfloppy-$(version_linux-2.6)-$1

install-linux-2.6-$1-$2: \
  $(cfg_boot_dir)/$2/vmlinuz-$(version_linux-2.6)-$1 \
  $(cfg_boot_dir)/$2/bzImage-$(version_linux-2.6)-$1

ifeq ($(cfg_l4ka_hvm),y)
install-linux-2.6-$1-$2: \
  $(cfg_boot_dir)/$2/guestfloppy-$(version_linux-2.6)-$1
endif


clean-linux-2.6-$1-$2:
	-$(Q) (cd $(build_dir)-$1-$2 && make clean)

uninstall-linux-2.6-$1-$2:
	-$(Q) rm -f $(cfg_boot_dir)/$2/vmlinuz-$(version_linux-2.6)-$1
	-$(Q) rm -f $(cfg_boot_dir)/$2/bzImage-$(version_linux-2.6)-$1
	-$(Q) rm -f $(build_dir)-$1-$2/arch/i386/boot/bzImage $(build_dir)-$1-$2/vmlinuz


mtoolsrc-$(version_linux-2.6)-$1-$2:
	echo 'drive y: file="$(cfg_boot_dir)/$2/guestfloppy-$(version_linux-2.6)-$1"' > $$@

$(cfg_boot_dir)/$2/guestfloppy-$(version_linux-2.6)-$1: \
	$(cfg_boot_dir)/$2/bzImage-$(version_linux-2.6)-$1 \
	$(afterburn_dir)/contrib/guestfloppy.img mtoolsrc-$(version_linux-2.6)-$1-$2 
	@# Create a disk image
	@echo "Creating boot floppy $$@ for $$<"
	$(Q) rm -f $$@ 
	$(Q) /sbin/mkdosfs -C $$@ 1440	
	$(Q) dd if=$(afterburn_dir)/contrib/guestfloppy.img of=$$@ conv=notrunc > /dev/null
	$(Q) export MTOOLSRC=mtoolsrc-$(version_linux-2.6)-$1-$2 ; \
		mcopy -o -m $$< y:vmlinuz || exit 0

$(cfg_boot_dir)/$2/vmlinuz-$(version_linux-2.6)-$1: $(build_dir)-$1-$2/vmlinuz
	$(Q) mkdir -p $(cfg_boot_dir)
	$(Q) cp $$< $$@
	$(Q) ln -sf $$(notdir $$@) $(cfg_boot_dir)/$2/vmlinuz-$1
	$(Q) ln -sf $$(notdir $$@) $(cfg_boot_dir)/$2/vmlinuz

$(cfg_boot_dir)/$2/bzImage-$(version_linux-2.6)-$1: $(build_dir)-$1-$2/arch/i386/boot/bzImage
	$(Q) mkdir -p $(cfg_boot_dir)
	$(Q) cp $$< $$@
	$(Q) ln -sf $$(notdir $$@) $(cfg_boot_dir)/$2/bzImage-$1

$(build_dir)-$1-$2/vmlinuz: $(build_dir)-$1-$2/vmlinux
	$(Q) strip -o $$(<D)/vmlinux.stripped $$(<D)/vmlinux
	$(Q) gzip -fc $$(<D)/vmlinux.stripped > $$(<D)/vmlinuz

$(cfg_build_dir)/$(unpack_linux-2.6)-$1-$2/afterburn/drivers/cfg.Mk:
	$(Q) mkdir -p $$(@D)
	$(Q) touch $$@

.PHONY: $(build_dir)-$1-$2/arch/i386/boot/bzImage
$(build_dir)-$1-$2/vmlinux: $(build_dir)-$1-$2/arch/i386/boot/bzImage
$(build_dir)-$1-$2/arch/i386/boot/bzImage: $(build_dir)-$1-$2/.config \
	$(cfg_src_dir)/$(unpack_linux-2.6)/afterburn/drivers \
	$(cfg_build_dir)/$(unpack_linux-2.6)-$1-$2/afterburn/drivers/cfg.Mk \
	patch-linux-2.6	
	@echo "Building Linux 2.6 $1 cpu $2"
	$(Q) mkdir -p $(cfg_usr_dir)
	$(Q) cd $(cfg_src_dir)/$(unpack_linux-2.6) && make $(S) O=$(build_dir)-$1-$2 $(linux-2.6-opts)
	$(Q) if grep CONFIG_MODULES=y $(build_dir)-$1-$2/.config ;\
		 then cd $(cfg_src_dir)/$(unpack_linux-2.6) &&\
		 make $(S) O=$(build_dir)-$1-$2 $(linux-2.6-opts) modules_install ; fi


$(build_dir)-$1-$2/.config: $(afterburn_dir)/configs/linux-2.6/dot-config-$(version_linux-2.6)-$1 \
						        $(cfg_common_dir)/config.out 
	@echo "Using config file $$< with cpu $2"
	$(Q) mkdir -p $$(@D)
	$(Q) cd $(build_dir)-$1-$2; make $(S) clean || true
	$(Q) cat $$< \
		$$(sed-linux-config-$2) \
		| sed -e '{ s/CONFIG_LOCALVERSION=.*/CONFIG_LOCALVERSION="-$1-$2"/g ; }' \
	        > $$@

commit-linux-2.6:: commit-linux-2.6-$1-$2

commit-linux-2.6-$1-$2: $(build_dir)-$1-$2/.config
	@echo "Saving config file $$<"
	$(Q) cp $$< $(afterburn_dir)/configs/linux-2.6/dot-config-$(version_linux-2.6)-$1-$2

diff-linux-2.6:: diff-linux-2.6-$1-$2

diff-linux-2.6-$1-$2: $(afterburn_dir)/configs/linux-2.6/dot-config-$(version_linux-2.6)-$1-$2 $(build_dir)-$1-$2/.config
	@echo "Diffing config files $$<"
	-$(Q) diff $$^

endef


linux-2.6-y =
linux-2.6-$(cfg_linux_2_6_driver)	+= driver$(suffix-y)
linux-2.6-$(cfg_linux_2_6_qemu)		+= qemu$(suffix-y)
linux-2.6-$(cfg_linux_2_6_ddos)		+= ddos$(suffix-y)
linux-2.6-$(cfg_linux_2_6_guest)	+= guest$(suffix-y)
linux-2.6-$(cfg_linux_2_6_vdev)		+= vdev$(suffix-y)

linux-2.6-extra = $(subst ",,$(cfg_linux_2_6_extra))
linux-2.6-y += $(patsubst %,%$(suffix-y),$(linux-2.6-extra))

##  Instantiate the linux-2.6-template for each Linux configuration.
$(foreach cpu,$(cpus-y),\
	$(foreach name,$(linux-2.6-y), \
	   $(eval $(call linux-2.6-template,$(name),$(cpu)))))


##  A utility to help extract a kernel config file from a kernel binary.
linux-2.6-binoffset = $(firstword $(wildcard $(foreach name,$(linux-2.6-y),$(cfg_build_dir)/$(unpack_linux-2.6)-$(name)/scripts/binoffset)))

